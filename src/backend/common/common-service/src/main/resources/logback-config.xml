<?xml version="1.0" encoding="UTF-8"?>

<configuration debug="false" scan="false">
    <springProperty scope="context" name="logging.path" source="logging.path" defaultValue="logs"/>
    <springProperty scope="context" name="application.name" source="spring.application.name" defaultValue="application"/>

    <property name="logging.app.file" value="${logging.path}/${application.name}.log"/>
    <property name="logging.api.file" value="${logging.path}/${application.name}-api.log"/>
    <property name="logging.framework.file" value="${logging.path}/${application.name}-framework.log"/>
    <property name="logging.error.file" value="${logging.path}/${application.name}-error.log"/>
    <property name="logging.access.file" value="${logging.path}/${application.name}-access.log"/>
    <property name="logging.file.pattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS}|%X{ip:--}|%F|%L|%level|%X{err_code:-0}|%tid||||[%t] %m%ex%n"/>
    <property name="logging.console.pattern" value="%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} [%clr(%tid)] %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"/>

    <!-- 彩色日志依赖的渲染类 -->
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>
    <conversionRule conversionWord="wex" converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter"/>
    <conversionRule conversionWord="wEx" converterClass="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter"/>

    <appender name="app_log" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logging.app.file}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${logging.app.file}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
            <maxFileSize>1GB</maxFileSize>
        </rollingPolicy>
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="org.apache.skywalking.apm.toolkit.log.logback.v1.x.TraceIdPatternLogbackLayout">
                <pattern>${logging.file.pattern}</pattern>
            </layout>
        </encoder>
    </appender>

    <appender name="api_log" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logging.api.file}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${logging.api.file}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
            <maxFileSize>1GB</maxFileSize>
        </rollingPolicy>
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="org.apache.skywalking.apm.toolkit.log.logback.v1.x.TraceIdPatternLogbackLayout">
                <pattern>${logging.file.pattern}</pattern>
            </layout>
        </encoder>
    </appender>

    <appender name="framework_log" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logging.framework.file}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logging.framework.file}.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="org.apache.skywalking.apm.toolkit.log.logback.v1.x.TraceIdPatternLogbackLayout">
                <pattern>${logging.file.pattern}</pattern>
            </layout>
        </encoder>
    </appender>

    <appender name="error_log" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logging.error.file}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logging.error.file}.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="org.apache.skywalking.apm.toolkit.log.logback.v1.x.TraceIdPatternLogbackLayout">
                <pattern>${logging.file.pattern}</pattern>
            </layout>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="org.apache.skywalking.apm.toolkit.log.logback.v1.x.TraceIdPatternLogbackLayout">
                <pattern>${logging.console.pattern}</pattern>
            </layout>
        </encoder>
    </appender>

    <springProfile name="default">
        <logger name="com.tencent.bkrepo" level="DEBUG" additivity="false">
            <appender-ref ref="console"/>
        </logger>
        <logger name="com.tencent.bkrepo.common.service.config.FeignFilterRequestMappingHandlerMapping" level="INFO" additivity="false">
            <appender-ref ref="console"/>
        </logger>
        <logger name="com.novemberain.quartz.mongodb" level="WARN">
            <appender-ref ref="console"/>
        </logger>
        <root level="INFO">
            <appender-ref ref="console"/>
        </root>
    </springProfile>

    <springProfile name="dev">
        <logger name="com.tencent.bkrepo" level="DEBUG">
            <appender-ref ref="app_log"/>
        </logger>

        <logger name="ServiceResourceApi" level="INFO" additivity="false">
            <appender-ref ref="api_log"/>
        </logger>

        <logger name="com.novemberain.quartz.mongodb" level="WARN">
            <appender-ref ref="app_log"/>
        </logger>

        <logger name="org" level="INFO">
            <appender-ref ref="framework_log"/>
        </logger>

        <root level="ERROR">
            <appender-ref ref="error_log"/>
        </root>
    </springProfile>

    <springProfile name="test, prod">
        <logger name="com.tencent.bkrepo" level="INFO">
            <appender-ref ref="app_log"/>
        </logger>

        <logger name="ServiceResourceApi" level="INFO" additivity="false">
            <appender-ref ref="api_log"/>
        </logger>

        <logger name="com.novemberain.quartz.mongodb" level="WARN">
            <appender-ref ref="app_log"/>
        </logger>

        <logger name="org" level="WARN">
            <appender-ref ref="framework_log"/>
        </logger>

        <root level="ERROR">
            <appender-ref ref="error_log"/>
        </root>
    </springProfile>

</configuration>
